{
    "name": "d34dman/drupal-recipe-manager",
    "description": "A CLI tool for managing and executing Drupal recipes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "D34dman",
            "email": "shibinkidd@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.4 || ^7.0 || ^8.0",
        "symfony/filesystem": "^6.4 || ^7.0 || ^8.0",
        "symfony/finder": "^6.4 || ^7.0 || ^8.0",
        "symfony/process": "^6.4 || ^7.0 || ^8.0",
        "symfony/yaml": "^6.4 || ^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.17",
        "symfony/var-dumper": "^6.4",
        "vimeo/psalm": "^5.15",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "D34dman\\DrupalRecipeManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "D34dman\\DrupalRecipeManager\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/drupal-recipe-manager"],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run",
        "psalm": "psalm",
        "check": [
            "@cs-check",
            "@phpstan",
            "@psalm",
            "@test"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
