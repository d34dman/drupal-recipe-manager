<?xml version="1.0"?>
<psalm
    errorLevel="2"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="tests" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MissingReturnType errorLevel="info" />
        <MissingPropertyType errorLevel="info" />
        <MissingParamType errorLevel="info" />
        <MissingClosureReturnType errorLevel="info" />
        <InvalidReturnType errorLevel="error" />
        <InvalidPropertyAssignmentValue errorLevel="error" />
        <InvalidPropertyAssignmentType errorLevel="error" />
        <InvalidArgument errorLevel="error" />
        <InvalidScalarArgument errorLevel="error" />
        <InvalidArrayOffset errorLevel="error" />
        <InvalidArrayAssignment errorLevel="error" />
        <InvalidArrayAccess errorLevel="error" />
        <MixedArgument errorLevel="error" />
        <MixedAssignment errorLevel="error" />
        <MixedArrayAccess errorLevel="error" />
        <MixedArrayOffset errorLevel="error" />
        <MixedArrayAssignment errorLevel="error" />
        <MixedMethodCall errorLevel="error" />
        <MixedPropertyFetch errorLevel="error" />
        <MixedPropertyAssignment errorLevel="error" />
        <MixedOperand errorLevel="error" />
        <MixedReturnStatement errorLevel="error" />
        <MixedInferredReturnType errorLevel="error" />
        <MixedTypeCoercion errorLevel="error" />
        <MixedArgumentTypeCoercion errorLevel="error" />
        <MixedPropertyTypeCoercion errorLevel="error" />
        <MixedReturnTypeCoercion errorLevel="error" />
        <MixedArrayTypeCoercion errorLevel="error" />
        <MixedOperandTypeCoercion errorLevel="error" />
        <MixedMethodCallTypeCoercion errorLevel="error" />
        <MixedPropertyFetchTypeCoercion errorLevel="error" />
        <MixedArrayAccessTypeCoercion errorLevel="error" />
        <MixedArrayOffsetTypeCoercion errorLevel="error" />
        <MixedArrayAssignmentTypeCoercion errorLevel="error" />
    </issueHandlers>
</psalm> 